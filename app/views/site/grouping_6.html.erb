            <% @table.each do |row| %>
            <tr>
              <td><%= row[0] %></td>
              <td><%= row[1] %></td>
              <td><%= row[2] %></td>
              <td><%= row[3].to_s.split(']').last.to_s %></td>
              <td><%= row[4] %></td>
              <td><%= row[5] %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <table id="eTable_2" class="table table-hover" style="display:none;">
          <thead>
            <tr>
              <th>#</th>
              <th>분류</th>
