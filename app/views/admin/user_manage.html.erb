<div class="x_panel">
  <div class="x_title">
    <h2>사용자 관리 <small></small></h2>
    <ul class="nav navbar-right panel_toolbox">
      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
      </li>
      <li><a class="close-link"><i class="fa fa-close"></i></a>
      </li>
    </ul>
    <div class="clearfix"></div>
  </div>
  <div class="x_content">
    <br />
    <form action="/admin/user_manage" method="POST" data-parsley-validate class="form-horizontal form-label-left">
        <input type="hidden" value="<%= params[:id] %>" name="id">
      <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">E-mail <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
          <input type="text" name="email" required="required" class="form-control col-md-7 col-xs-12" value="<%= @u.email %>" disabled/>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">이름</label>
        <div class="col-md-6 col-sm-6 col-xs-12">
          <input type="text" name="name" class="form-control col-md-7 col-xs-12" value="<%= @u.name %>" />
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">연락처</label>
        <div class="col-md-6 col-sm-6 col-xs-12">
          <input type="text" name="contact" class="form-control col-md-7 col-xs-12" value="<%= @u.contact %>" />
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">권한(역할)</label>
        <div class="col-md-6 col-sm-6 col-xs-12">
          <div class="btn-group" data-toggle="buttons">
            <input type="radio" class="flat" name="role" value="1" <%= "checked" if @u.role == 1 || @u.role.nil? %> required />
            사용자
            <br>
            <input type="radio" class="flat" name="role" value="2" <%= "checked" if @u.role == 2 %> />
            구성원
            <br>
            <input type="radio" class="flat" name="role" value="3" <%= "checked" if @u.role == 3 %> />
            관리자
          </div>
        </div>
      </div>
      <div class="ln_solid"></div>
      <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
          <button type="submit" class="btn btn-success">확인</button>
          <% unless @u.id.nil? %>
            <a href="/admin/user_manage/delete?b=<%= @u.id %>"class="btn btn-danger">삭제</a>
          <% end %>
        </div>
      </div>

    </form>
  </div>
</div>
