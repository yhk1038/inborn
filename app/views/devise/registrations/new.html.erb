<!-- Custom Theme Style -->
<link href="/admin/build/css/custom0.css" rel="stylesheet">
<div class="row" style="padding-top: 15px;">
  <div class="col-md-6 col-md-offset-3 col-xs-12 col-xs-offset-0">
    <div class="x_panel">
      <div class="x_title">
        <h2>회원가입 <small><%= devise_error_messages! %></small></h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="close-link"><i class="fa fa-close"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">

        <!-- start form for validation -->
        <!-- <form id="demo-form" data-parsley-validate> -->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <label for="user_name">이메일주소 *:</label>
            <input class="form-control" autofocus="autofocus" type="text" value="" name="user[email]" id="user_email" required/>

            <label for="user_name">이름 *:</label>
            <input class="form-control" autofocus="autofocus" type="text" value="" name="user[name]" id="user_name" required/>

            <label for="user_current_password">비밀번호 * :</label>
            <input class="form-control" autocomplete="off" type="password" value="" name="user[password]" id="user_password" required/>

            <label for="user_password_confirmation">비밀번호 재 입력 *:</label>
            <input class="form-control" autocomplete="off" type="password" value="" name="user[password_confirmation]" id="user_password_confirmation"/>

            <label for="user_contact">연락처 *:</label>
            <input class="form-control" type="text" value="" name="user[contact]" id="user_contact" required/>

            <br/>

            <button class="btn btn-info" type="submit" style="float:right">회원가입</button>
        <% end %>
      </div>
    </div>


  </div>
</div>
