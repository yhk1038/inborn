<link href="/admin/build/css/custom0.css" rel="stylesheet">

  <div class="col-md-6 col-md-offset-3 col-xs-12 col-xs-offset-0">
    <div class="x_panel">
      <div class="x_title">
        <h2>회원정보 수정 <small><%= devise_error_messages! %></small></h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#">Settings 1</a>
              </li>
              <li><a href="#">Settings 2</a>
              </li>
            </ul>
          </li>
          <li><a class="close-link"><i class="fa fa-close"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">

        <!-- start form for validation -->
        <!-- <form id="demo-form" data-parsley-validate> -->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <label for="name">이름 * :</label>
          <input class="form-control" autofocus="autofocus" type="text" value="<%= current_user.name %>" name="user[name]" id="user_name" required/>

          <label for="current_password">현재 비밀번호 * :</label>
          <input class="form-control" autocomplete="off" type="current_password" value="" name="user[current_password]" id="user_current_password" required/>

          <label for="password">변경 비밀번호 :</label>
          <input class="form-control" autocomplete="off" type="password" value="" name="user[password]" id="user_password"/>

          <label for="password_confirmation">변경 비밀번호 재 입력 :</label>
          <input class="form-control" autocomplete="off" type="password_confirmation" value="" name="user[password_confirmation]" id="user_password_confirmation"/>

          <label for="contact">연락처 :</label>
          <input class="form-control" type="text" value="" name="user[contact]" id="user_contact"/>

          <span class="btn btn-primary">확인</span>

        <% end %>
        <!-- end form for validations -->

      </div>
    </div>


  </div>



<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

